import pygame
import sys

# 1. 初始化 Pygame
pygame.init()

# 2. 创建游戏窗口（宽度400，高度300）
screen = pygame.display.set_mode((400, 300))
# 设置窗口标题
pygame.display.set_caption("我的第一个Pygame窗口")

# 3. 游戏主循环（核心：持续监听事件、更新画面）
clock = pygame.time.Clock()  # 用于控制帧率
running = True
while running:
    # 监听事件
    for event in pygame.event.get():
        # 处理窗口关闭事件
        if event.type == pygame.QUIT:
            running = False

    # 填充窗口背景色（RGB：浅灰色）
    screen.fill((240, 240, 240))
    
    # 更新画面（必须调用，否则绘制内容不显示）
    pygame.display.flip()
    
    # 控制帧率为60帧/秒
    clock.tick(60)

# 4. 退出Pygame，关闭程序
pygame.quit()
sys.exit()
