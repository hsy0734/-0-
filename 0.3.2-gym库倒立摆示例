import gym

# 1. 创建环境（CartPole-v1 是倒立摆的标准环境）
env = gym.make("CartPole-v1", render_mode="human")  # render_mode="human" 显示可视化窗口定义人类模式

# 2. 重置环境，获取初始状态
observation, info = env.reset()

# 3. 与环境交互（执行100步动作）
for _ in range(100):
    # 随机选择动作（0=向左推，1=向右推；实际强化学习中这里会替换成算法输出的动作）
    action = env.action_space.sample()
    
    # 执行动作，获取反馈
    observation, reward, terminated, truncated, info = env.step(action)
    
    # 可视化环境画面
    env.render()
    
    # 如果任务结束（比如杆子倒了），重置环境
    if terminated or truncated:
        observation, info = env.reset()

# 4. 关闭环境
env.close()
